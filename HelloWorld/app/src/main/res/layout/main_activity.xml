<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="10dp"
    >

    <LinearLayout
        android:id="@+id/vote_11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请投票旅游景点："
            android:textSize="18sp"/>
        <RadioGroup
            android:id="@+id/visit_place_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:paddingLeft="5dp">
            <RadioButton
                android:id="@+id/ems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="峨眉山"/>
            <RadioButton
                android:id="@+id/qcs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="青城山"/>

            <RadioButton
                android:id="@+id/ts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="泰山"/>
            <RadioButton
                android:id="@+id/wds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="武当山"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/vote_111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/vote_11"
        >
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择兴趣爱好"
        android:textColor="#FF8000"
        android:textSize="18sp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="羽毛球"
        android:textSize="18sp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="乒乓球"
        android:textSize="18sp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="篮球"
        android:textSize="18sp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="排球"
        android:textSize="18sp"/>
    <LinearLayout
        android:id="@+id/vote_1111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/vote_111"
        android:gravity="center"
        android:padding="5dp"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            />
        <EditText

            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxLength="16"
            android:maxLines="1"/>



        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="80dp"

            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true" />
        <EditText
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="16"
            android:maxLines="1"



            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/progress_11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/vote_111"
        android:gravity="center"
        >
        <ProgressBar
            android:id="@+id/progress_111"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:max="100"/>
        <Button
            android:id="@+id/plus_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"/>
        <Button
            android:id="@+id/substract_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"/>
    </LinearLayout>
    <!-- <SeekBar
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
          android:layout_below="@+id/progress_11"
         style="@style/"/>-->
    <Butto
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:text="提交"/>

</RelativeLayout>